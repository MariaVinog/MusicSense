<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="metaextract.nkm.com.myplayer.DataShow"
    tools:showIn="@layout/data_show_layout">


    <TextView
        android:id="@+id/textgps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:color="#144800"
        android:padding="10dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:onClick="getGps"
        android:text="Get GPS" />

    <Button
        android:id="@+id/buttonH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/textgps"
        android:onClick="getH"
        android:text="Get H" />

    <TextView
        android:id="@+id/textH"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonH"
        android:color="#144800"
        android:padding="10dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/acc_x"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textH"
        android:layout_marginTop="64dp"
        android:color="#144800"
        android:padding="10dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/acc_y"
        android:layout_width="fill_parent"
        android:layout_below="@+id/acc_x"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:color="#144800"
        android:padding="10dp"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/acc_z"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/acc_y"
        android:color="#144800"
        android:padding="10dp"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/time_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:color="#144800"
        android:padding="10dp"
        android:textSize="16dp" />



</RelativeLayout>
